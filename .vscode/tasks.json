{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "options": {
    "shell": {
      "executable": "/bin/bash",
      "args": ["-c"]
    }
  },
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "./build.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean & Build",
      "type": "shell",
      "command": "rm -rf ./build && ./build.sh",
      "group": "build"
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "source ./.env/bin/activate && nosetests",
      "group": "test"
    }
  ]
}
