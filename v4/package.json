  "license": "ISC",
  "dependencies": {
    "fs-extra": "^11.2.0",
    "wabt": "^1.0.32"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
