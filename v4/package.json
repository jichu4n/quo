{
  "name": "quo",
  "version": "0.1.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "build:tsc": "tsc",
    "build:wasm": "wat2wasm src/main.wat -o dist/main.wasm",
    "build": "npm run build:tsc && npm run build:wasm",
    "watch:ts": "tsc -w",
    "watch:wasm": "chokidar src/*.wat -c \"npm run build:wasm\"",
    "watch": "concurrently -n \"TypeScript,WASM\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run watch:ts\" \"npm run watch:wasm\"",
    "start": "node dist/main.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
