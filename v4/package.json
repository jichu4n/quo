{
  "name": "quo",
  "version": "0.1.0",
  "description": "",
  "main": "dist/quo0.js",
  "scripts": {
    "build:tsc": "tsc",
    "build:wasm": "mkdir -p dist && wat2wasm --enable-exceptions src/quo0.wat -o dist/quo0.wasm",
    "build": "npm run build:tsc && npm run build:wasm",
    "watch:ts": "tsc -w",
    "watch:wasm": "chokidar --initial src/*.wat -c \"npm run build:wasm\"",
    "watch": "concurrently -n \"TypeScript,WASM\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run watch:ts\" \"npm run watch:wasm\"",
    "quo0": "node dist/quo0.js",
    "test": "jest"
  },
