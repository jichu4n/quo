    "fs-extra": "^11.2.0",
    "wabt": "^1.0.32"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.5",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
